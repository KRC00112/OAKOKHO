<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FDFCFC"
    tools:context=".myCourseFragment">

    <View
        android:id="@+id/topView"
        android:layout_width="451dp"
        android:layout_height="342dp"
        android:background="@color/oakokho_theme_color"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.421"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/roundedView"
        android:layout_width="437dp"
        android:layout_height="676dp"
        android:background="@drawable/rounded_corner_home_theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView" />

    <ScrollView
        android:layout_width="448dp"
        android:layout_height="600dp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">

            <View
                android:id="@+id/blankView"
                android:layout_width="match_parent"
                android:layout_height="131dp" />

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="393dp"
                android:layout_height="562dp"
                android:layout_marginTop="8dp"
                app:columnCount="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressCard"
                app:rowCount="3">


                <androidx.cardview.widget.CardView
                    android:id="@+id/coreAssameseLearningCard"
                    android:layout_width="182dp"
                    android:layout_height="171dp"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:layout_column="0"
                    app:layout_row="0">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/bookImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="98dp"
                            android:src="@drawable/book" />

                        <TextView
                            android:id="@+id/coreAssameseLearningTextView"
                            android:layout_width="147dp"
                            android:layout_height="53dp"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="11dp"
                            android:layout_marginBottom="47dp"
                            android:text="Core Assamese Learning"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/completedTextView1"
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="40dp"
                            android:text="Completed: "
                            android:textColor="#000000"
                            android:textSize="10sp"
                            android:textStyle="normal" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/speakingCard"
                    android:layout_width="182dp"
                    android:layout_height="171dp"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:layout_column="1"
                    app:layout_row="0">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/speakingImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="98dp"
                            android:src="@drawable/speaking" />

                        <TextView
                            android:id="@+id/speakingTextView"
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="68dp"
                            android:text="Speaking"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/completedTextView2"
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="40dp"
                            android:text="Completed: "
                            android:textColor="#000000"
                            android:textSize="10sp"
                            android:textStyle="normal" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/writingCard"
                    android:layout_width="182dp"
                    android:layout_height="171dp"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:layout_column="0"
                    app:layout_row="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:backgroundTint="#FFFFFF">

                        <ImageView
                            android:id="@+id/writingImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="98dp"
                            android:src="@drawable/writing" />

                        <TextView
                            android:id="@+id/writingTextView"
                            android:layout_width="122dp"
                            android:layout_height="wrap_content"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="36dp"
                            android:layout_marginBottom="68dp"
                            android:text="Writing"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/completedTextView3"
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="40dp"
                            android:text="Completed: "
                            android:textColor="#000000"
                            android:textSize="10sp"
                            android:textStyle="normal" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/readingCard"
                    android:layout_width="182dp"
                    android:layout_height="171dp"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:layout_column="1"
                    app:layout_row="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:backgroundTint="#FFFFFF">

                        <ImageView
                            android:id="@+id/readingImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="98dp"
                            android:src="@drawable/reading" />

                        <TextView
                            android:id="@+id/readingTextView"
                            android:layout_width="114dp"
                            android:layout_height="wrap_content"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="44dp"
                            android:layout_marginBottom="68dp"
                            android:text="Reading"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/completedTextView4"
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="40dp"
                            android:text="Completed: "
                            android:textColor="#000000"
                            android:textSize="10sp"
                            android:textStyle="normal" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/gamesCard"
                    android:layout_width="182dp"
                    android:layout_height="171dp"
                    android:layout_margin="8dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:layout_column="0"
                    app:layout_columnSpan="2"
                    app:layout_gravity="center_horizontal"
                    app:layout_row="2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/gamesImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="98dp"
                            android:src="@drawable/games" />

                        <TextView
                            android:id="@+id/gamesTextView"
                            android:layout_width="127dp"
                            android:layout_height="wrap_content"

                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="31dp"
                            android:layout_marginBottom="68dp"
                            android:text="Games"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/completedTextView5"
                            android:layout_width="131dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="27dp"
                            android:layout_marginBottom="40dp"
                            android:text="Completed: "
                            android:textColor="#000000"
                            android:textSize="10sp"
                            android:textStyle="normal" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/progressCard"
        android:layout_width="402dp"
        android:layout_height="138dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/roundedView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/roundedView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:id="@+id/myProgressTextView"
                android:layout_width="225dp"

                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="114dp"
                android:layout_marginBottom="82dp"

                android:background="#00040404"
                android:fontFamily="@font/varela_round"
                android:text="My progress"
                android:textColor="#050505"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/expPointsTextView"
                android:layout_width="225dp"

                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="114dp"
                android:layout_marginBottom="35dp"

                android:background="#00040404"
                android:fontFamily="sans-serif-light"
                android:text="EXP points: "
                android:textColor="#050505"
                android:textSize="20sp"
                android:textStyle="normal" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>